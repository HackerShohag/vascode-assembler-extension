{
  "name": "assembler",
  "displayName": "Assembly Code Runner",
  "description": "A assembly code runner that compiles using NASM and links through GCC to make executable for host platform.",
  "version": "0.0.2",
  "publisher": "HackerShohag",
  "icon": "images/assembler-logo.png",
  "engines": {
    "vscode": "^1.83.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "author": {
    "name": "Abdullah AL Shohag"
  },
  "contributes": {
    "commands": [
      {
        "command": "extension.runAssembly",
        "title": "Run Assembly Code"
      },
      {
        "command": "extension.modifyExecutorMap",
        "title": "Add configuration to Code Runner"
      }
    ],
    "languages": [
      {
          "id": "assembly",
          "aliases": ["asm", "assembly"],
          "extensions": [".asm"],
          "configuration": "path.join(vscode.extensions.get('HackerShohag.assembler').extensionPath, \".vscode\",\"assemblyRunner.json\")" 
      }
    ]
  },
  "tasks": [
  {
      "label": "Run Assembly",
      "type": "shell",
      "command": "${command:extension.runAssembly}",
      "group": {
          "kind": "build",
          "isDefault": true
      },
      "presentation": {
          "reveal": "always",
          "panel": "shared"
      }
    }
  ],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.2",
    "@types/node": "18.x",
    "@types/vscode": "^1.83.0",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.50.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "child_process": "^1.0.2"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:HackerShohag/vscode-assembler-extension.git"
  },
  "license": "GPLv3"
}
